{
    "compilerOptions": {
        "outDir": "./dist",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "module": "es6",
        "target": "ES6",
        "allowJs": true,
        "checkJs": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "noEmitOnError": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src", "index.d.ts"],
    "exclude": [
        "node_modules",
        "dist",
        "webpack.config.js"
    ]
}